<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Store</title>
  <link rel="icon" type="image/svg+xml" href="/images/pizza.svg">
  <link rel="stylesheet" href="/css/main.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>
  <nav class="navbar navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">

        <img src="/images/logo.png" alt="logo" class="d-inline-block align-text-top logo">
      </a>
      <form class="d-flex" method="post" action="/" novalidate>
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="search">
        <button class="btn btn-outline-warning" type="submit">Search</button>
      </form>
    </div>
  </nav>

  <section class="menu">
    <!-- title -->
    <div class="title">
      <h2>pizza menu</h2>
      <div class="underline"></div>
    </div>
    <!-- menu items -->
    <div class="section-center">
      {{#each rows}}
      <article class="menu-item">
        <img src="{{this.img}}" class="photo" alt="{{this.title}}" />
        <div class="item-info">
          <header>
            <h4>{{this.title}}</h4>
            <h4 class="price">{{this.price}}$</h4>
            <h4> <a href="/order/{{this.id}}" type="button" class="btn btn-outline-warning btn-sm ">ORDER</a></h4>
          </header>
          <p class="item-text">{{this.info}}</p>
        </div>
      </article>
      {{/each}}
    </div>
  </section>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>

</html>